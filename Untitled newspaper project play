    <script>
        const headlines = [
            "Geese Union on Genesee River Demands Better Bread Crumbs",
            "Eastman Kodak Building Briefly Vanishes in 'Camera Shy' Incident",
            "Wegmans to Introduce 'Thought-Powered' Shopping Carts, Chaos Ensues",
            "Susan B. Anthony House Reports Suffragette Ghost Complaining About Wi-Fi Signal",
            "Scientists at U of R Baffled by Squirrels' Advanced Knowledge of Particle Physics",
            "Garbage Plate Declared Official Currency in Monroe County",
            "Mysterious Hum Near High Falls Traced to Giant, Sleeping Cat",
            "Xerox Develops 'Un-Copier' That Erases Documents From History",
            "Strong Museum of Play Announces 'Existential Dread' Exhibit for Adults",
            "Canal Boats Now Being Pulled by Teams of Highly Trained, Ambitions Snails",
            "Rochester Lilac Festival to Feature Scent-Cancelling Technology This Year",
            "Man Fined for Teaching Pigeons at Highland Park to Sove Rubik's Cubes",
            "RIT Students Build Functional Time Machine; Use It Only to Attend Better Parties",
            "Frontier Field Concession Stands to Begin Selling 'Invisibility Hot Dogs'"
        ];

        const intros = [
            "In a stunning turn of events,", "City Hall was in an uproar today after", "Challenging the very fabric of our reality,",
            "Sources deep within the city's infrastructure have confirmed that", "A public notice issued this morning warned residents that",
            "Following an exhaustive, three-day investigation,", "In a move that has puzzled economists and bird-watchers alike,"
        ];

        const subjects = [
            "a secret society of downtown parking meters", "the entire population of Cobbs Hill Park's deer",
            "a sentient salt barrel from the City DPW", "a disgruntled group of retired Kodak engineers",
            "the ghost of Nathaniel Rochester himself", "a flock of seagulls from Lake Ontario",
            "the underground network of forgotten subway tunnels", "a surprisingly well-organized book club from the South Wedge"
        ];

        const actions = [
            "has demanded representation on the city council.", "has successfully filed for municipal bankruptcy.",
            "is now offering unsolicited life advice to passersby.", "has copyrighted the specific shade of gray of Rochester's sky.",
            "announced its candidacy for the upcoming mayoral election.", "published a tell-all memoir about the city's early days.",
            "is petitioning for the Erie Canal to be filled with cream soda.", "has begun construction on a massive suspension bridge made of licorice."
        ];

        const conclusions = [
            "The mayor's office has responded with a terse 'no comment.'", "Experts say the situation could resolve itself by Tuesday.",
            "Most citizens were reportedly unfazed, stating 'we've seen weirder.'", "This development is expected to dramatically impact property values.",
            "A special task force has been assembled to 'look into it.'", "The long-term ramifications remain, for the moment, unknowable."
        ];

        function getRandomElement(arr) {
            return arr[Math.floor(Math.random() * arr.length)];
        }

        function generateStory() {
            const storyParts = [
                getRandomElement(intros),
                getRandomElement(subjects),
                getRandomElement(actions),
                getRandomElement(conclusions),
                "Further details emerged throughout the day, causing widespread confusion.",
                "Witnesses described the scene as 'mildly interesting' to 'utterly perplexing'.",
                "The situation is expected to continue for the foreseeable future."
            ];
            return storyParts.slice(0, Math.floor(Math.random() * 3) + 4).join(" ");
        }

        document.addEventListener('DOMContentLoaded', () => {
            // Set date
            const dateEl = document.getElementById('date-display');
            dateEl.textContent = new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }).toUpperCase();

            // Set weather
            const weatherEl = document.getElementById('weather');
            const temps = [45, 52, 61, 73, 80];
            const conditions = ['Cloudy', 'Mostly Sunny', 'Chance of Rain', 'Breezy'];
            weatherEl.textContent = `WEATHER: ${getRandomElement(conditions)}, High ${getRandomElement(temps)}°`;

            // Populate articles
            const articles = document.querySelectorAll('.article');
            let usedHeadlines = [...headlines];

            articles.forEach(article => {
                const headlineEl = article.querySelector('[data-id="headline"]');
                const storyEl = article.querySelector('[data-id="story"]');

                if (usedHeadlines.length === 0) usedHeadlines = [...headlines]; // Refill
                
                const headlineIndex = Math.floor(Math.random() * usedHeadlines.length);
                headlineEl.textContent = usedHeadlines.splice(headlineIndex, 1)[0];
                storyEl.textContent = generateStory();
            });
        });
    </script>

