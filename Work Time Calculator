        <div class="bg-gray-50 px-6 py-3 text-center text-xs text-gray-500">
            Work Time Calculator
        </div>
    </div>

    <script>
        function calculateTime() {
            const targetHours = parseFloat(document.getElementById('targetHours').value);
            const startTimeStr = document.getElementById('startTime').value;
            const breakStartStr = document.getElementById('breakStart').value;
            const breakEndStr = document.getElementById('breakEnd').value;

            const resultCard = document.getElementById('resultCard');
            const errorMessage = document.getElementById('errorMessage');

            // Reset UI
            resultCard.classList.add('hidden');
            errorMessage.classList.add('hidden');

            if (!targetHours || !startTimeStr || !breakStartStr || !breakEndStr) {
                showError("Please fill in all fields.");
                return;
            }

            // Helper to convert "HH:MM" to minutes from midnight
            const getMinutes = (timeStr) => {
                const [hours, minutes] = timeStr.split(':').map(Number);
                return hours * 60 + minutes;
            };

            const startMinutes = getMinutes(startTimeStr);
            const breakStartMinutes = getMinutes(breakStartStr);
            const breakEndMinutes = getMinutes(breakEndStr);

            // Validation
            if (breakStartMinutes <= startMinutes) {
                showError("Break cannot start before clock in.");
                return;
            }
            if (breakEndMinutes <= breakStartMinutes) {
                showError("Break end must be after break start.");
                return;
            }

            // Calculations
            const shift1Minutes = breakStartMinutes - startMinutes;
            const targetMinutes = Math.round(targetHours * 60);
            const remainingMinutes = targetMinutes - shift1Minutes;

            if (remainingMinutes <= 0) {
                showError("You've already met your hours!");
                document.getElementById('finalTime').innerText = "Done!";
                resultCard.classList.remove('hidden');
                return;
            }

            const finalMinutes = breakEndMinutes + remainingMinutes;

            // Formatting
            const formatTime = (totalMinutes) => {
                let h = Math.floor(totalMinutes / 60);
                let m = Math.round(totalMinutes % 60);
                
                // Handle overflow of minutes (though math above handles it mostly)
                if (m >= 60) { h++; m -= 60; }
                
                // Handle day overflow
                h = h % 24;
                
                const ampm = h >= 12 ? 'PM' : 'AM';
                const displayH = h % 12 || 12; // convert 0 to 12
                const displayM = m < 10 ? '0' + m : m;
                
                return `${displayH}:${displayM} ${ampm}`;
            };

            const formatDuration = (mins) => {
                const h = Math.floor(mins / 60);
                const m = Math.round(mins % 60);
                return `${h}h ${m}m`;
            };

            // Display Results
            document.getElementById('finalTime').innerText = formatTime(finalMinutes);
            document.getElementById('shiftDuration').innerText = formatDuration(shift1Minutes);
            document.getElementById('remainingTime').innerText = formatDuration(remainingMinutes);
            
            resultCard.classList.remove('hidden');
        }

        function showError(msg) {
            document.getElementById('errorText').innerText = msg;
            document.getElementById('errorMessage').classList.remove('hidden');
        }
    </script>
</body>
</html>
