    <div class="bg-white rounded-xl shadow-lg w-full max-w-md overflow-hidden">
        <!-- Header -->
        <div class="bg-blue-600 p-6 text-white text-center">
            <h1 class="text-2xl font-bold"><i class="fas fa-clock mr-2"></i>Punch Out Calculator</h1>
            <p class="text-blue-100 mt-1">Calculate your end of day time</p>
        </div>

        <!-- Form -->
        <div class="p-6 space-y-4">
            
            <!-- Target Hours -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Target Hours (e.g., 7.8)</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
                        <i class="fas fa-hourglass-half"></i>
                    </span>
                    <input type="number" id="targetHours" step="0.01" value="7.8" class="pl-10 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 border p-2.5" placeholder="8.0">
                </div>
            </div>

            <!-- Start Time -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Clock In Time</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
                        <i class="fas fa-sign-in-alt"></i>
                    </span>
                    <input type="time" id="startTime" value="08:58" class="pl-10 time-input block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 border p-2.5">
                </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <!-- Break Start -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Break Start</label>
                    <input type="time" id="breakStart" value="12:27" class="time-input block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 border p-2.5">
                </div>

                <!-- Break End -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Break End</label>
                    <input type="time" id="breakEnd" value="13:00" class="time-input block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 border p-2.5">
                </div>
            </div>

            <!-- Calculate Button -->
            <button onclick="calculateTime()" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200 shadow-md transform hover:-translate-y-0.5">
                Calculate Punch Out
            </button>

            <!-- Results Section -->
            <div id="resultCard" class="hidden mt-6 bg-gray-50 rounded-lg border border-gray-200 p-4">
                <div class="text-center">
                    <p class="text-sm text-gray-500 uppercase tracking-wide font-semibold">You can leave at</p>
                    <h2 id="finalTime" class="text-4xl font-extrabold text-blue-600 mt-2">--:--</h2>
                </div>
                
                <div class="mt-4 border-t border-gray-200 pt-3 text-sm text-gray-600 space-y-1">
                    <div class="flex justify-between">
                        <span>First Shift:</span>
                        <span id="shiftDuration" class="font-medium text-gray-900">0h 00m</span>
                    </div>
                    <div class="flex justify-between">
                        <span>Remaining Needed:</span>
                        <span id="remainingTime" class="font-medium text-gray-900">0h 00m</span>
                    </div>
                </div>
