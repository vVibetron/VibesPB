        document.getElementById('btn-2').addEventListener('click', () => {
            generatePhrase('quality', 'result-2', 'copy-2');
        });

        document.getElementById('btn-3').addEventListener('click', () => {
            generatePhrase('green', 'result-3', 'copy-3');
        });

        // --- SYNTAX ERROR FIX ---
        // The 'D' was removed from this line
        document.getElementById('btn-4').addEventListener('click', () => {
            generatePhrase('service', 'result-4', 'copy-4');
        });

        // --- DIAGNOSTICS MODAL ---
        const diagBtn = document.getElementById('diag-btn');
        const diagModal = document.getElementById('diag-modal');
        const diagClose = document.getElementById('diag-close');
        const diagContent = document.getElementById('diag-content');
        const diagCopy = document.getElementById('diag-copy');

        diagBtn.addEventListener('click', () => {
            // Update diagnostics report time and viewport
            diagnostics.reportGeneratedAt = new Date().toISOString();
            diagnostics.viewport = `${window.innerWidth}x${window.innerHeight}`;
            
            // Populate and show the modal
            diagContent.textContent = JSON.stringify(diagnostics, null, 2);
            diagModal.classList.remove('hidden');
        });

        diagClose.addEventListener('click', () => {
            diagModal.classList.add('hidden');
        });

        // Close modal if clicking on the background overlay
        diagModal.addEventListener('click', (e) => {
            if (e.target === diagModal) {
                diagModal.classList.add('hidden');
            }
        });

        diagCopy.addEventListener('click', () => {
            const textToCopy = diagContent.textContent;
            const copyHelper = document.getElementById('copy-helper');
            
            copyHelper.value = textToCopy;
            copyHelper.select();
            copyHelper.setSelectionRange(0, 99999);

            try {
                document.execCommand('copy');
                diagCopy.innerText = 'Copied!';
                diagCopy.classList.add('copied-btn');
                setTimeout(() => {
                    diagCopy.innerText = 'Copy Report';
                    diagCopy.classList.remove('copied-btn');
                }, 2000);
            } catch (err) {
                console.error('Failed to copy diagnostics: ', err);
            }
        });

    </script>
</body>
